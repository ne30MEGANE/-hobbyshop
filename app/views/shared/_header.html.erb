<h1 class="title"><%= link_to "HOBBY SHOP NS", :root %></h1>
<% if signed_in? %>
  <ul class="account-menu">
    <%= signed_in?.user_name + "様" %>
    <%= menu_link_to "サインアウト", '/logout', method: :delete,
        data: { confirm: "サインアウトしますか？"} %>
  </ul>
<% else %>
  <% if request.path_info != '/login' %>
    <ul class="account-menu">
      <%= "ゲスト様" %>
      <%= menu_link_to "サインイン", '/login'%>
    </ul>
  <% end %>
<% end %>