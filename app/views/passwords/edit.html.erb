<% @page_title = "パスワード変更" %>

<h2><%= @page_title %></h2>
<div class="paragraph">
    <p>
        新しいパスワードを設定できます<br>
        <%= link_to "会員情報確認へ戻る", :edit_account %>
    </p>
</div>

<%= form_for @user, as: "account", url: :password do |form| %>
  <%= render "shared/errors", obj: @user %>

  <div class="user_form">
    <table>
      <tr>
        <th><%= form.label :current_password %></th>
        <td><%= form.password_field :current_password %></td>
      </tr>
      <tr>
        <th><%= form.label :password %></th>
        <td><%= form.password_field :password %></td>
      </tr>
      <tr>
        <th><%= form.label :password_confirmation %></th>
        <td><%= form.password_field :password_confirmation %></td>
      </tr>
    </table>
  </div>

  <div class="submit"><%= form.submit "変更" %></div>
<% end %>