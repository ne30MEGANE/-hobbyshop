<% @page_title = "#{@item.item_name}"%>

<h2><%= @item.item_name %></h2>

<%= link_to "商品情報を変更する", edit_admin_item_path(@item) %>

<div class="item_show">
  <div class="image_and_detail">
    <div id="item_image">
      <% if @item.item_image.attached? %>
          <%= image_tag @item.item_image %>
      <% else %>
          <%= image_tag("default.png") %>
      <% end %>
    </div>
    <div id="item_detail">
      <%= @item.item_details %>
    </div>
  </div>
  <table>
    <tr>
      <th>商品名</th>
      <td><%= @item.item_name %></td>
    </tr>
    <tr>
      <th>カテゴリ</th>
      <td>
        <% if @item.category.present? %>
          <%= @item.category.category_name %>
        <% else %>
          未登録
        <% end %>
      </td>
    </tr>
    <tr>
      <th>価格</th>
      <td><%= @item.price %>円</td>
    </tr>
    <tr>
      <th>発売日</th>
      <td><%= @item.releace&.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
      <th>在庫数</th>
      <td><%= @item.stock %>個</td>
    </tr>
  </table>
</div>

<h3>この商品のレビュー</h3>
<% if @item.reviews.present? %>
<table class="r_table">
  <tr>
    <th>平均点数</th>
    <% total = 0.0 %>
    <% @item.reviews.each do |r| %>
      <% total += r.score %>
    <% end %>
    <% kensu = @item.reviews.count %>
    <td><%= (total/kensu).round(1) %> 点</td>
  </tr>
</table>
<% stars = ['', '★', '★★', '★★★', '★★★★', '★★★★★'] %>
<div>
  <% @item.reviews.each do |r| %>
    <div class="review">
      <h4><%= User.find(r.user_id).nickname %>さん：<%= stars[r.score] %></h4>
      <p><%= r.text %></p>
    </div>
  <% end %>
</div>
<% else %>
  <p>
    この商品へのレビューは存在しません
  </p>
<% end %>